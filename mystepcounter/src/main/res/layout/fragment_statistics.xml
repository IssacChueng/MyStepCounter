<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.issac.mystepcounter.fragment.FragmentHomePage">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_above="@+id/chartContainer">
    <com.issac.mystepcounter.view.ColorTextStrip
        android:id="@+id/tab_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:progress="1"
        app:time_text="date"
        app:text_normal_color="#ff000000"
        app:text_change_color="#ffff0000"
        app:time_text_size="18sp"/>
    <com.issac.mystepcounter.view.ColorTextStrip
        android:id="@+id/tab_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:progress="1"
        app:time_text="week"
        app:text_normal_color="#ff000000"
        app:text_change_color="#ffff0000"
        app:time_text_size="18sp"/>
    <com.issac.mystepcounter.view.ColorTextStrip
        android:id="@+id/tab_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:progress="1"
        app:time_text="month"
        app:text_normal_color="#ff000000"
        app:text_change_color="#ffff0000"
        app:time_text_size="18sp"/>
</LinearLayout>
<android.support.v4.view.ViewPager
    android:id="@+id/chartContainer"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="2dp"
    android:layout_above="@+id/linearParent"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    >

</android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/linearParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_above="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            android:id="@+id/gray_line1" />
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_above="@+id/gray_line2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            >
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_foots"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/step_count_today"
                android:textColor="@android:color/darker_gray"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/tv_stepCounts"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="步"
                android:textColor="@android:color/darker_gray"
                android:typeface="sans"/>
        </LinearLayout>
        <View
            android:layout_above="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            android:id="@+id/gray_line2" />
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_above="@+id/gray_line3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            >
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_distance"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/distance"
                android:textColor="@android:color/darker_gray"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/tv_distance"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="步"
                android:textColor="@android:color/darker_gray"
                android:typeface="sans"/>
        </LinearLayout>
        <View
            android:layout_above="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            android:id="@+id/gray_line3" />
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            >
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_energy"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/kal_count"
                android:textColor="@android:color/darker_gray"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/tv_kal"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="步"
                android:textColor="@android:color/darker_gray"
                android:typeface="sans"/>
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
